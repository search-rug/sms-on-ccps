	Month = {{MAY 4}},
	Number = {{4-5, SI}},
	Pages = {{340-351}},
	Title = {{A novel fluid architecture for cyber-physical production systems}},
	Unique-Id = {{ISI:000473454500003}},
	Volume = {{32}},
	Year = {{2019}},
