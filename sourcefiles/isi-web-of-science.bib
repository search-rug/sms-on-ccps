	Issn = {{0167-4048}},
	Journal = {{COMPUTERS \& SECURITY}},
	Month = {{SEP}},
	Pages = {{281-300}},
	Title = {{Tangible security: Survey of methods supporting secure ad-hoc connects of edge devices with physical context}},
	Unique-Id = {{ISI:000447358700020}},
	Volume = {{78}},
	Year = {{2018}},
	Bdsk-Url-1 = {https://doi.org/10.1016/j.cose.2018.06.009%7D}}

@article{ISI:000432100600018,
	Abstract = {{Contemporary booming growth of the Internet-based techniques has risen a
